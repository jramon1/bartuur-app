<div class="navbar-wagon">
  <!-- icon on the left side -->
  <%= link_to account_matches_path, class: "navbar-wagon-gray" do %>
    <i class="fa fa-arrow-left icon-big"></i>
    <% end %>

  <div>
    <ul class="list-inline">
      <li>
        <%= cl_image_tag @other_user.picture, class: "avatar" %>
      </li>
      <li>
        <h4><%= @other_user.first_name %> <%= @other_user.last_name[0,1] %>.</h4>
      </li>
    </ul>
  </div>

  <div class="navbar-wagon-right">
    <%= link_to show_description_product_path(@other_product), class: "navbar-wagon-item navbar-wagon-link" do %>
    <%= cl_image_tag @other_product.photos.first.path, class:"avatar-square" %>
    <% end %>
  </div>
</div>
</div>
