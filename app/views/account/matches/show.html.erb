<%= render 'shared/navbars/arrow_user_product' %>

<div class="container-match-since">
  <p>Matched since <%= @match_since %></p>
  <hr>
</div>

<div class="container-chat">
  <% @match.messages.each do |message| %>
  <% if message.user_id == @other_user.id %>
  <p class="them">
    <%= message.content %>
  </p>
  <% else %>
  <p class="me">
    <%= message.content %>
  </p>
  <% end %>
  <% end %>
</div>


<div id="footer-chat">
  <%= simple_form_for [@match, @message], url: account_match_messages_path(@match) do |f| %>
  <%= f.input :content, label: false, as: :text, input_html: {rows: 1, cols: 10} %>
  <div class="form-actions">
    <%= f.submit %>
  </div>

  <% end %>
</div>
