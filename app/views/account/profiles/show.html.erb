<div class="wrapper">
  <div class="container-fluid text-center">
    <div class="row">
      <h1>Profile</h1>
        <div class="user-profile">
          <div class="user-picture">
            <%= cl_image_tag current_user.picture, class:"img-circle" %>
          </div>
          <div class="user-info">
            <%= current_user.first_name %>
            <%= current_user.last_name %>
          </div>
        </div>
    </div>
    <div class="products-index products-overview">
      <% @products.each do |product| %>
        <% if product.photos.any? %>
          <div class="product-card">
          <%= link_to account_product_path(product), class: "product-flex" do%>
            <div class="product-card-image">
              <%= cl_image_tag product.photos.first.path,height: 200 %>
            </div>
            <div class="product-card-content">
              <div class="product-title">
                <%= product.name %>
              </div>
              <div class="product-description">
                <%= product.description %>
              </div>
            </div>
            <div class="product-card-extra">
              <%= product.value %>
            </div>
            <%end%>
            <%end%>
          </div>
        <%end%>
        <div class="product-card add-product-profile">
        <%= link_to new_account_product_path do%>
          <div class="add-product-profile-image">
            <i class="fa fa-plus big-green" aria-hidden="true"></i>
          </div>
          <div class="add-product-profile-content">
            <div class="add-product-profile-title">Products</div>
            <div class="add-product-profile-description">
              <p>Discover what cool goods you can achieve with your item. To start trading, upload a product.</p>
            </div>
          </div>
          <%end%>
        </div>
    </div>
  </div>
</div>

