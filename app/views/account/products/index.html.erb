<div class="wrapper">
  <div class="container-fluid text-center">
    <div class="row">
        <% @products.each do |product| %>
      <div class="col-xs-12 col-md-4 col-sm-6">
          <% if product.photos.any? %>
            <%= link_to account_product_path(product) do%>
              <%= cl_image_tag product.photos.first.path, width: 300, height: 200, crop: :fill %>
            <%end%>
          <%end%>
      </div>
         <%end%>
    </div>
    <div class="row">
      <div class="col-xs-12">
          <h1>Products</h1>
          <p>Discover what cool goods you can achieve with your item. To start trading, upload your product below.</p>
          <i class="fa fa-exchange big" aria-hidden="true"></i>
          <div><%= link_to "Add a product", new_account_product_path, {class: "btn btn-primary"} %>
          </div>
      </div>
    </div>
  </div>
</div>


